{
  "compilerOptions": {
    "target": "es2021",
    "moduleResolution": "node",
    "lib": [
      "es2023",
      "dom"
    ],
    "declaration": true,
    "declarationMap": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "outDir": "./dist",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*.ts",
    "types/**/*"
  ],
}